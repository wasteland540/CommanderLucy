                <Button Margin="10,10,148,10">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resource/config8.png" Height="25"/>
                        <TextBlock Text="Config" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Button>
                <Button  Margin="148,10,10,10">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Resource/plugin8.png" Height="25"  HorizontalAlignment="Left"/>
